<html>

<head>
    <title>
        <%= title %>
    </title>
</head>

<body>

    <section id="feed-posts">
        <h4>
            Posts
        </h4>

        <% if(locals.user) {%>
        <form action="\posts\create" id="new-post form" method="POST">
            <textarea name="content" id="" cols="30" rows="3" placeholder="Type here.." required></textarea>
            <input type="submit" value="Post">
        </form>
        <%}%>

       
        <div>
            <ul>
                <% for(post of posts){ %>
                    <%- include('_post') -%>
                <% } %>
                </ul>
            </div>
    </section>
</body>

</html>